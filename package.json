{
  "name": "capto",
  "version": "1.0.0",
  "description": "The tool that converts directory structures and file contents into a stylish PDF (Japanese version available).",
  "main": "dist/index.js",
  "bin": {
    "capto": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "setup": "npm install && npm run build && npm link",
    "teardown": "npm unlink capto"
  },
  "keywords": [
    "directory",
    "snapshot",
    "pdf",
    "document",
    "file",
    "structure",
    "japanese"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chardet": "^1.5.1",
    "commander": "^11.0.0",
    "iconv-lite": "^0.6.3",
    "ignore": "^5.2.4",
    "isbinaryfile": "^5.0.0",
    "puppeteer": "^24.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
